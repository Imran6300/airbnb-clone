<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100 min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <%- include("../partials/navbar") %>

    <!-- SIGNUP SECTION -->
    <main class="flex-grow flex items-center justify-center px-6">
      <div class="w-full max-w-md">
        <!-- Card -->
        <div
          class="bg-[#111827] border border-white/10 rounded-2xl p-6 shadow-2xl"
        >
          <!-- Header (smaller) -->
          <div class="text-center mb-5">
            <h1 class="text-2xl font-bold mb-1">Create your account</h1>
            <p class="text-gray-400 text-sm">
              Join <span class="text-[#FF385C]">NeoStay</span> today
            </p>
          </div>

          <!-- Error Message -->
          <% if (typeof message !== "undefined" && message) { %>
          <div
            class="mb-4 p-3 rounded-lg bg-red-500/10 text-red-400 text-sm border border-red-500/20"
          >
            <%= message %>
          </div>
          <% } %>

          <!-- Form -->
          <form action="/signup" method="POST" class="space-y-4">
            <!-- Name -->
            <div>
              <label class="block text-xs font-medium mb-1">Full name</label>
              <input
                type="text"
                name="name"
                placeholder="Syed Imran"
                required
                class="w-full px-3 py-2.5 rounded-lg bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Email -->
            <div>
              <label class="block text-xs font-medium mb-1">Email</label>
              <input
                type="email"
                name="email"
                placeholder="you@example.com"
                required
                class="w-full px-3 py-2.5 rounded-lg bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-xs font-medium mb-1">Password</label>
              <input
                type="password"
                name="password"
                placeholder="••••••••"
                required
                class="w-full px-3 py-2.5 rounded-lg bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Confirm Password -->
            <div>
              <label class="block text-xs font-medium mb-1">
                Confirm password
              </label>
              <input
                type="password"
                name="confirmPassword"
                placeholder="••••••••"
                required
                class="w-full px-3 py-2.5 rounded-lg bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Terms -->
            <div class="flex items-start gap-2 text-xs text-gray-400">
              <input type="checkbox" required class="accent-[#FF385C] mt-0.5" />
              <p>
                I agree to the
                <a href="#" class="text-[#FF385C] hover:underline">Terms</a>
                &
                <a href="#" class="text-[#FF385C] hover:underline">
                  Privacy Policy
                </a>
              </p>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full py-2.5 rounded-full bg-[#FF385C] text-white text-sm font-medium hover:bg-[#e0314f] transition"
            >
              Create account
            </button>
          </form>

          <!-- Divider (reduced margin) -->
          <div class="my-5 flex items-center gap-3">
            <div class="flex-1 h-px bg-white/10"></div>
            <span class="text-gray-500 text-xs">or</span>
            <div class="flex-1 h-px bg-white/10"></div>
          </div>

          <!-- Login CTA -->
          <p class="text-center text-gray-400 text-xs">
            Already have an account?
            <a
              href="/auth/login"
              class="text-[#FF385C] hover:underline font-medium"
            >
              Log in
            </a>
          </p>
        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>
  </body>
</html>
