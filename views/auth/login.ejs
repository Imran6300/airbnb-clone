<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100 min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <%- include("../partials/navbar") %>

    <!-- LOGIN SECTION -->
    <main class="flex-grow flex items-center justify-center px-6">
      <div class="w-full max-w-md">
        <!-- Card -->
        <div
          class="bg-[#111827] border border-white/10 rounded-2xl p-8 shadow-2xl"
        >
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-3xl font-bold mb-2">Welcome back</h1>
            <p class="text-gray-400">
              Log in to continue to <span class="text-[#FF385C]">NeoStay</span>
            </p>
          </div>

          <!-- Error Message (optional) -->
          <% if (typeof message !== "undefined" && message) { %>
          <div
            class="mb-6 p-4 rounded-xl bg-red-500/10 text-red-400 text-sm border border-red-500/20"
          >
            <%= message %>
          </div>
          <% } %>

          <!-- Form -->
          <form action="/login" method="POST" class="space-y-6">
            <!-- Email -->
            <div>
              <label class="block text-sm font-medium mb-2"> Email </label>
              <input
                type="email"
                name="email"
                placeholder="you@example.com"
                required
                class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-medium mb-2"> Password </label>
              <input
                type="password"
                name="password"
                placeholder="••••••••"
                required
                class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
              />
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-between text-sm">
              <label class="flex items-center gap-2 text-gray-400">
                <input
                  type="checkbox"
                  name="remember"
                  class="accent-[#FF385C]"
                />
                Remember me
              </label>

              <a
                href="/forgot-password"
                class="text-gray-400 hover:text-[#FF385C] transition"
              >
                Forgot password?
              </a>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full py-3 rounded-full bg-[#FF385C] text-white font-medium hover:bg-[#e0314f] transition"
            >
              Log in
            </button>
          </form>

          <!-- Divider -->
          <div class="my-8 flex items-center gap-4">
            <div class="flex-1 h-px bg-white/10"></div>
            <span class="text-gray-500 text-sm">or</span>
            <div class="flex-1 h-px bg-white/10"></div>
          </div>

          <!-- Signup CTA -->
          <p class="text-center text-gray-400 text-sm">
            Don’t have an account?
            <a
              href="/signup"
              class="text-[#FF385C] hover:underline font-medium"
            >
              Sign up
            </a>
          </p>
        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>
  </body>
</html>
