<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100 min-h-screen flex flex-col">
    <%- include("../partials/navbar") %>

    <section class="pt-32 pb-12">
      <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-4xl font-bold mb-2">
          <%= editing ? "Edit Home" : "Add a new home" %>
        </h1>
        <p class="text-gray-400">
          Share your space with travelers around the world
        </p>
      </div>
    </section>

    <main class="flex-grow pb-24">
      <div class="max-w-4xl mx-auto px-6">
        <form
          action="<%= editing ? '/host/edit-home' : '/host/add-home' %>"
          method="POST"
          class="bg-[#111827] border border-white/10 rounded-2xl p-8 shadow-xl space-y-6"
        >
          <% if (editing) { %>
          <input type="hidden" name="homeId" value="<%= home._id %>" />
          <% } %>

          <!-- Title -->
          <input
            name="title"
            value="<%= editing ? home.title : '' %>"
            placeholder="Home title"
            class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10"
            required
          />

          <!-- Location -->
          <input
            name="location"
            value="<%= editing ? home.location : '' %>"
            placeholder="Location"
            class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10"
            required
          />

          <!-- Image -->
          <input
            name="imageUrl"
            value="<%= editing ? home.imageUrl : '' %>"
            placeholder="Image URL"
            class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10"
          />

          <!-- Description -->
          <textarea
            name="description"
            rows="4"
            required
            class="w-full px-4 py-3 rounded-xl bg-transparent border border-white/10"
          >
<%= editing ? home.description : '' %></textarea
          >

          <!-- Price & Guests -->
          <div class="grid grid-cols-2 gap-4">
            <input
              type="number"
              name="price"
              value="<%= editing ? home.price : '' %>"
              placeholder="Price"
              class="px-4 py-3 rounded-xl bg-transparent border border-white/10"
              required
            />

            <input
              type="number"
              name="guests"
              value="<%= editing ? home.guests : '' %>"
              placeholder="Guests"
              class="px-4 py-3 rounded-xl bg-transparent border border-white/10"
              required
            />
          </div>

          <!-- Amenities -->
          <div class="grid grid-cols-3 gap-3 text-sm">
            <% ["wifi","parking","ac","kitchen","tv","pool"].forEach(a => { %>
            <label class="flex items-center gap-2">
              <input type="checkbox" name="amenities" value="<%= a %>" <%=
              editing && home.amenities.includes(a) ? "checked" : "" %>
              class="accent-[#FF385C]" />
              <span class="capitalize"><%= a %></span>
            </label>
            <% }) %>
          </div>

          <!-- Submit -->
          <button
            class="w-full py-3 rounded-full bg-[#FF385C] text-white hover:bg-[#e0314f] transition"
          >
            <%= editing ? "Update Home" : "Add Home" %>
          </button>
        </form>
      </div>
    </main>

    <%- include("../partials/footer") %>
  </body>
</html>
