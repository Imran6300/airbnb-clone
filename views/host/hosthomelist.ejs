<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100 min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <%- include("../partials/navbar") %>

    <!-- PAGE HEADER -->
    <section class="pt-32 pb-16">
      <div
        class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-start md:items-center gap-6"
      >
        <div>
          <h1 class="text-4xl font-bold mb-2">My Homes</h1>
          <p class="text-gray-400">Manage your listed properties</p>
        </div>

        <!-- Add Home -->
        <a
          href="/host/add-home"
          class="px-6 py-3 rounded-full bg-[#FF385C] text-white hover:bg-[#e0314f] transition"
        >
          + Add New Home
        </a>
      </div>
    </section>

    <!-- HOST HOMES -->
    <main class="flex-grow pb-24">
      <div class="max-w-7xl mx-auto px-6">
        <!-- üîÅ If homes exist -->
        <% if (homes && homes.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% homes.forEach(home => { %>
          <div
            class="bg-[#111827] rounded-2xl border border-white/10 hover:border-[#FF385C]/40 transition shadow-lg hover:shadow-2xl"
          >
            <!-- Image -->
            <img
              src="<%= home.imageUrl || 'https://images.unsplash.com/photo-1505691938895-1758d7feb511' %>"
              class="h-52 w-full object-cover rounded-t-2xl"
            />

            <!-- Content -->
            <div class="p-5">
              <h3 class="text-lg font-semibold mb-1"><%= home.title %></h3>

              <p class="text-gray-400 text-sm mb-2"><%= home.location %></p>

              <p class="font-semibold mb-4">‚Çπ<%= home.price %> / night</p>

              <!-- Actions -->
              <div class="flex gap-3">
                <a
                  href="/host/edit-home/<%= home._id %>"
                  class="flex-1 text-center px-4 py-2 rounded-full border border-white/10 text-sm hover:border-[#FF385C] hover:text-[#FF385C] transition"
                >
                  Edit
                </a>

                <form
                  action="/host/delete-home"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this home?');"
                  class="flex-1"
                >
                  <input type="hidden" name="homeId" value="<%= home._id %>" />
                  <button
                    class="w-full px-4 py-2 rounded-full bg-red-500/10 text-red-400 hover:bg-red-500/20 transition text-sm"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

        <!-- üåô Empty State -->
        <% } else { %>
        <div class="text-center py-32">
          <h2 class="text-3xl font-bold mb-4">No homes listed yet üè†</h2>

          <p class="text-gray-400 mb-8">
            Start hosting by adding your first property
          </p>

          <a
            href="/host/add-home"
            class="inline-block px-8 py-3 rounded-full bg-[#FF385C] text-white hover:bg-[#e0314f] transition"
          >
            Add your first home
          </a>
        </div>
        <% } %>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>
  </body>
</html>
