<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100 min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <%- include("../partials/navbar") %>

    <!-- HERO IMAGE -->
    <section class="pt-28">
      <div class="max-w-7xl mx-auto px-6">
        <img
          src="<%= home.imageUrl %>"
          alt="<%= home.title %>"
          class="w-full h-[420px] object-cover rounded-3xl shadow-2xl"
        />
      </div>
    </section>

    <!-- HOME DETAILS -->
    <main class="flex-grow py-16">
      <div
        class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-3 gap-12"
      >
        <!-- LEFT CONTENT -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Title & Location -->
          <div>
            <h1 class="text-4xl font-bold mb-2"><%= home.title %></h1>
            <p class="text-gray-400 text-lg"><%= home.location %></p>
          </div>

          <!-- Meta -->
          <div class="flex gap-6 text-gray-300 text-sm">
            <span>üë• <%= home.guests %> guests</span>
            <span>üè† Entire home</span>
          </div>

          <!-- Description -->
          <div>
            <h2 class="text-2xl font-semibold mb-3">About this place</h2>
            <p class="text-gray-400 leading-relaxed"><%= home.description %></p>
          </div>

          <!-- Amenities -->
          <div>
            <h2 class="text-2xl font-semibold mb-4">Amenities</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 text-gray-300">
              <% home.amenities.forEach(item => { %>
              <div
                class="flex items-center gap-2 bg-[#111827] border border-white/10 px-4 py-3 rounded-xl"
              >
                ‚úî <span class="capitalize"><%= item %></span>
              </div>
              <% }) %>
            </div>
          </div>
        </div>

        <!-- RIGHT BOOKING CARD -->
        <div
          class="bg-[#111827] border border-white/10 rounded-2xl p-6 shadow-xl h-fit sticky top-32"
        >
          <p class="text-2xl font-bold mb-4">
            ‚Çπ<%= home.price %>
            <span class="text-sm text-gray-400 font-normal">/ night</span>
          </p>

          <div class="space-y-4 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-400">Max guests</span>
              <span><%= home.guests %></span>
            </div>

            <div class="flex justify-between">
              <span class="text-gray-400">Location</span>
              <span><%= home.location %></span>
            </div>
          </div>
          <form action="/bookings/add" method="POST">
            <input type="hidden" name="homeId" value="<%= home._id %>" />
            <button
              class="w-full mt-6 py-3 rounded-full bg-[#FF385C] text-white"
            >
              Book Now
            </button>
          </form>
        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>
  </body>
</html>
