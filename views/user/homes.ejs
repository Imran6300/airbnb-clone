<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>

  <body class="bg-[#0B0F19] text-gray-100">
    <!-- NAVBAR -->
    <%- include("../partials/navbar") %>

    <!-- HERO -->
    <section class="pt-32 pb-24">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Find your next <span class="text-[#FF385C]">stay</span>
        </h1>

        <p class="text-gray-400 mb-10">
          Book unique homes and experiences all over the world
        </p>

        <!-- SEARCH BAR -->
        <div
          class="bg-[#111827] shadow-2xl border border-white/10 rounded-full p-4 flex flex-col md:flex-row gap-4 max-w-4xl mx-auto"
        >
          <input
            type="text"
            placeholder="Where are you going?"
            class="flex-1 px-6 py-3 rounded-full bg-transparent border border-white/10 text-gray-200 placeholder-gray-500 focus:outline-none focus:border-[#FF385C]"
          />

          <input
            type="date"
            class="px-6 py-3 rounded-full bg-transparent border border-white/10 text-gray-400 focus:outline-none focus:border-[#FF385C]"
          />

          <input
            type="date"
            class="px-6 py-3 rounded-full bg-transparent border border-white/10 text-gray-400 focus:outline-none focus:border-[#FF385C]"
          />

          <button
            class="bg-[#FF385C] cursor-pointer text-white px-8 py-3 rounded-full hover:bg-[#e0314f] transition"
          >
            Search
          </button>
        </div>
      </div>
    </section>

    <!-- LISTINGS -->
    <section class="py-24">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl font-bold mb-10">Popular stays</h2>

        <% if (!homes || homes.length === 0) { %>
        <p class="text-gray-400">No homes available right now.</p>
        <% } else { %>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <% homes.forEach(home => { %>

          <div
            class="group bg-[#111827] rounded-2xl border border-white/10 shadow-lg hover:shadow-2xl transition overflow-hidden"
          >
            <!-- Image -->
            <div class="relative">
              <img
                src="<%= home.imageUrl %>"
                alt="<%= home.title %>"
                class="h-56 w-full object-cover transition group-hover:scale-105 duration-300"
              />

              <!-- Glass Action Bar -->
              <div
                class="absolute bottom-0 left-0 right-0 bg-black/50 backdrop-blur-md px-4 py-3 flex items-center justify-between opacity-0 group-hover:opacity-100 transition"
              >
                <!-- View -->
                <a
                  href="/homes/<%= home._id %>"
                  class="text-sm font-medium text-white hover:text-[#FF385C] transition"
                >
                  View Details →
                </a>

                <!-- Favourite -->
                <form action="/wishlist" method="POST">
                  <input type="hidden" name="homeId" value="<%= home._id %>" />
                  <button
                    class="text-sm px-3 py-1.5 rounded-full border border-white/30 text-white hover:border-[#FF385C] hover:text-[#FF385C] transition"
                  >
                    Add to Fav
                  </button>
                </form>
              </div>
            </div>

            <!-- Content -->
            <div class="p-5">
              <h3 class="font-semibold text-lg"><%= home.title %></h3>

              <p class="text-gray-400 text-sm"><%= home.location %></p>

              <div class="flex items-center justify-between mt-3">
                <p class="font-semibold">₹<%= home.price %> / night</p>

                <span
                  class="text-xs text-gray-400 border border-white/10 px-2 py-1 rounded-full"
                >
                  Stay
                </span>
              </div>
            </div>
          </div>

          <% }) %>
        </div>

        <% } %>
      </div>
    </section>

    <!-- FOOTER -->
    <%- include("../partials/footer") %>
  </body>
</html>
